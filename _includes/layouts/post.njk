---
layout: layouts/base.njk
---
<article>
<h2>{{ title }}</h2>
<p>
  {{ layoutContent | safe }}
</p>

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a class="clay" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}
</article>
<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Back to info list</a>
</nav>
